<div class="row mt-4 py-4">
    <div class="col-md-5 mx-auto mt-5">
        <div class="card p-4 mt-4 shadow-lg">
            <div class="card-header"><h2 class="text-center">Sign In</h2></div>
            <form action="/login" method="POST" class="mt-2">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter your username" name="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Enter your password" name="password">
                </div>
                <button class="btn btn-info btn-block">Login</button><hr>
                <a href="/register" class="btn btn-block">Register</a>
            </form>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{{#if alert}}
    <script>
        Swal.fire({
            text: '{{ alertMessage }}',
            icon: '{{ alertIcon }}',
            timer: '{{ time }}'
        }).then(() =>{
            window.location='/{{ ruta }}'
        })
    </script>
{{/if}}