<div class="row mt-4 py-4">
    <div class="col-md-5 mx-auto mt-5">
        <div class="card p-4 mt-4 shadow-lg">
            <div class="card-header"><h2 class="text-center">Save Post</h2></div>
            <form action="/post-save" method="POST" class="mt-2">
                <input type="text" value="{{update._id}}" name="_id">
                <input type="hidden" value="{{user.username}}" name="user">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter your title" name="title" value="{{update.title}}">
                </div>
                <div class="form-group">
                    <textarea placeholder="Enter your descripction" name="descp" class="form-control">{{update.descp}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter your url" name="url">
                </div>
                <button class="btn btn-info btn-block">Save</button>
            </form>
        </div>
    </div>
</div>